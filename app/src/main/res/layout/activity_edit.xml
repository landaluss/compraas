<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#da4958">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_small"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:paddingLeft="7dp"
                android:src="@drawable/letras_shopping_list"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="horizontal"
        android:background="#933b49">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar lista de la compra"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="25dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/cabecera"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:src="@drawable/cabececra_lista" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/datos"
        android:layout_below="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:padding="10sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Etitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:hint="Titulo de la lista"
            android:inputType="text"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:shadowRadius="20"
            android:textColor="#933b49"
            android:textColorHint="#933b49"
            android:textSize="25dp" />


        <EditText
            android:id="@+id/Ecompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:hint="Productos a comprar"
            android:paddingTop="10dp"
            android:gravity="left|top"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="6"
            android:scrollbars="vertical"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:shadowRadius="20"
            android:textColor="#933b49"
            android:textColorHint="#933b49"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/datos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginVertical="0dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/llsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#933b49">

            <ImageButton
                android:id="@+id/btnUpdate"
                android:background="#933b49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_save"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#da4958">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>