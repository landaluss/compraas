<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:id="@+id/rlLogo">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_small"/>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="23dp"
                    android:paddingLeft="7dp"
                    android:src="@drawable/letras_shopping_list"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/iconAccount"
                android:paddingTop="50dp"
                android:layout_below="@+id/rlLogo">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_password"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/rlTextForgot"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="50dp"
                android:layout_below="@+id/iconAccount">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:text="Rellena el siguiente formulario para cambiar tu contrase単a por la que desees."/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/rlResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/EtResetPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:hint="Nueva Contrase単a"
                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:shadowRadius="20"
                    android:textColor="#933b49"
                    android:textColorHint="#933b49"
                    android:textAlignment="center"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/rlResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/EtRepeatResetPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:hint="Repite Nueva Contrase単a"
                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:shadowRadius="20"
                    android:textColor="#933b49"
                    android:textColorHint="#933b49"
                    android:textAlignment="center"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/rlBtnNcuenta"
                android:layout_below="@+id/rlPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btnResetPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_red"
                    android:textColor="#fff"
                    android:padding="12dp"
                    android:text="Cambiar Contrase単a"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>