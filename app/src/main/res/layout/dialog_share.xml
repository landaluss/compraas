<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#da4958">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_small"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:paddingLeft="7dp"
                android:src="@drawable/letras_shopping_list"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/texto"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compartir lista de la compra"
            android:textSize="25dp"
            android:textColor="#34393f"
            android:textStyle="bold"/>

        <TextView
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#34393f"
            android:text="Selecciona la opciÃ³n que prefieras para enviar tu lista de la compra a tus amigos"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">
        <ImageButton
            android:id="@+id/AlertDialog_wassap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:text="Cancelar"
            android:padding="10dp"
            android:background="#933b49"
            android:src="@drawable/ic_icon_whatsapp"/>
        <ImageButton
            android:id="@+id/AlertDialog_correo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:text="Cancelar"
            android:padding="10dp"
            android:background="#34393f"
            android:src="@drawable/ic_icon_email_share"/>
    </LinearLayout>

</RelativeLayout>