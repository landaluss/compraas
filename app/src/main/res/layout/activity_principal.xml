<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context=".PrincipalActivity">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#da4958">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_small"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="23dp"
                android:paddingLeft="7dp"
                android:src="@drawable/letras_shopping_list"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="horizontal"
        android:background="#933b49">

        <EditText
            android:id="@+id/EtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:drawableLeft="@drawable/ic_icon_search"
            android:hint="Buscar Lista"
            android:inputType="text"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:shadowRadius="20"
            android:textColor="#933b49"
            android:textColorHint="#933b49"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listas Disponibles"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#34393f"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/datos"
        android:layout_below="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10sp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/datos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginVertical="0dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/llsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#933b49">

            <ImageButton
                android:id="@+id/btnAdd"
                android:background="#933b49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_add"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#da4958">

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>